<% layout("/layouts/boilerplate") -%>

    <h2>Create a New Listing</h2>

    <div class="row-mt-3">
        <div class="col-8 offset-2">
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
    <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" placeHolder="Catcy/Title" class="form-control" required> 
        <div class="valid-feedback">
            Title Looks good!
          </div>
    </div> 
   
    <div class="mb-3">
        <lable for="image" class="form-label">Upload Image </lable>
        <input name="listing[image]" type="file" class="form-control" required> 
        
    </div>
    
    <div>
        <lable for="description" class="form-label">Description</lable>
        <textarea name="listing[description]" placeHolder="Description"class="form-control" required ></textarea> 
        <div class="invalid-feedback">
            Please Description will be short. 
          </div>
    </div>
    
    <div class="row">
    <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" placeHolder="1200 " class="form-control" required> 
        <div class="invalid-feedback">
            Please provide a valid Price.
          </div>
    </div>
    
    <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" placeHolder="India"type="text"class="form-control" required> 
        <div class="invalid-feedback">
           Country Should be valid.
          </div>
    </div>
    </div>
    <div class="mb-3">
       <lable for="location" class="form-label">location</lable>
        <input name="listing[location]" placeHolder="Punjab,Delhi"type="text"class="form-control" required> 
        <div class="invalid-feedback">
            Location Should be valid.
           </div>
    </div>
      
        <button class="btn  btn-add mt-3">Add</button>

    </form>
    </div>
    </div>


