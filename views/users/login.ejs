<% layout("/layouts/boilerplate") -%>
  

    <div class="row-mt-3">
        <h2 class="col-6 offset-3">Login</h2>
        <div class="col-6 offset-3 mt-3">
            <form method="post" action="/login" novalidate class="needs-validation">
                <div class="mb-3">
                    <lable for="username" class="form-label ">Username</lable>
                    <input name="username" placeHolder="UserName" id="username" type="text" class="form-control " required> 
                   
                </div>
                <div class="mb-3">
                    <lable for="password" class="form-label ">Password</lable>
                    <input name="password" placeHolder="Password" class="form-control "  id="password" type="password"required> 
                  
                </div> 
                <button class="btn  btn-add mt-3">Login</button>

            </form>
        </div>
    </div>        